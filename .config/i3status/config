general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "ethernet enp34s0"
order += "load"
order += "memory"
order += "disk /"
order += "disk /home"
order += "tztime local"
order += "volume master"

ethernet enp34s0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
        #hide_if_equals_localtime = true
}

load {
        format = "%5min"
}

memory {
        format = "%available"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "/ %free"
}

disk "/home" {
        format = "/home %free"
}

volume master {
        format = "♪ %volume"
        format_muted = "♪ muted (%volume)"
        device = "pulse:alsa_output.pci-0000_28_00.4.analog-stereo"
}
